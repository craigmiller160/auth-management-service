type Role {
    id: Int
    name: String!
    clientId: Int!
}

type ClientUser {
    id: Int
    email: String!
    firstName: String!
    lastName: String!
    roles: [Role]!
}

type Client {
    id: Int
    name: String!
    clientKey: String!
    enabled: Boolean!
    allowClientCredentials: Boolean!
    allowPassword: Boolean!
    allowAuthCode: Boolean!
    accessTokenTimeoutSecs: Int!
    refreshTokenTimeoutSecs: Int!
    roles: [Role]!
    users: [ClientUser]!
}

type UserClient {
    id: Int
    name: String!
    clientKey: String!
    allRoles: [Role]!
    userRoles: [Role]!
}

type User {
    id: Int
    email: String!
    firstName: String!
    lastName: String!
    clients: [UserClient]!
}

input RoleInput {
    name: String!
    clientId: Int!
}

input UserInput {
    email: String!
    password: String!
    firstName: String!
    lastName: String!
}

input ClientInput {
    name: String!
    clientKey: String!
    clientSecret: String!
    enabled: Boolean!
    allowClientCredentials: Boolean!
    allowPassword: Boolean!
    allowAuthCode: Boolean!
    accessTokenTimeoutSecs: Int!
    refreshTokenTimeoutSecs: Int!
}

type Query {
    clients: [Client]!
    client(id: Int): Client
    users: [User]!
    user(id: Int): User
}

type Mutation {
    createRole(role: RoleInput!): Role!
    updateRole(id: Int!, role: RoleInput!): Role!
    deleteRole(id: Int!): Role!

    createUser(user: UserInput!): User!
    updateUser(id: Int!, user: UserInput!): User!
    deleteUser(id: Int!): User!

    createClient(client: ClientInput!): Client!
    updateClient(id: Int!, client: ClientInput!): Client!
    deleteClient(id: Int!): Client!
}
